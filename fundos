<body>
  <div id="terminal"></div>
  <img id="logo" src="BLANK.png" alt="FUNDOS Logo Placeholder" />
  <button id="enter-btn" style="display:none;">Enter</button>

  <audio id="dialup-sound" src="BLANK.mp3" autoplay></audio>

<script>
  const terminal = document.getElementById('terminal');
  const enterBtn = document.getElementById('enter-btn');
  const dialupSound = document.getElementById('dialup-sound');

  const lines = [
    "Booting FUNDOS v1.0...",
    "Initializing clown protocols...",
    "Loading kernel modules: clown, fun, laugh, ha_ha...",
    "System check... all red noses green!",
    "Ready."
  ];

  let lineIndex = 0;

  function typeLine(line, callback) {
    let i = 0;
    terminal.textContent = "";
    const interval = setInterval(() => {
      terminal.textContent += line.charAt(i);
      i++;
      if (i >= line.length) {
        clearInterval(interval);
        setTimeout(callback, 700);
      }
    }, 50);
  }

  function nextLine() {
    if (lineIndex < lines.length) {
      typeLine(lines[lineIndex], () => {
        lineIndex++;
        nextLine();
      });
    } else {
      enterBtn.style.display = 'inline-block';
    }
  }

  // Start typing on load
  window.onload = () => {
    nextLine();
  };

  enterBtn.onclick = () => {
    // TODO: link to next page in the flow
    alert('Next page not linked yet!');
  };
</script>
</body>
